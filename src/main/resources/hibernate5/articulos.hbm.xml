<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.cajaregistradora.struts6.models">

    <class name="Articulo" schema="cajaregistradora01web" table="articulos">
        <id name="codigo" type="long" column="codigo"></id>
        <property name="descripcion" type="string" column="descripcion"/>
        <property name="precio" type="integer" column="precio"/>
    </class>

</hibernate-mapping>